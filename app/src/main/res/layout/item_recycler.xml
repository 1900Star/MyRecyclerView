<?xml version="1.0" encoding="utf-8"?>
<recyclerview.yunlian.com.myrecyclerview.view.SwipeItemLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#FFB082EC"
    android:layout_width="match_parent"
    android:layout_height="75dp">

    <RelativeLayout
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp" android:elevation="5dp"
            app:cardBackgroundColor="#fff" app:cardCornerRadius="10dp">
            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/iv_icon"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_margin="8dp"
                    android:src="@mipmap/ic_launcher"/>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:maxLines="2"
                        android:id="@+id/tv_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:gravity="center_vertical"
                        android:text="1900"
                    />
                    <TextView
                        android:maxLines="2"
                        android:id="@+id/tv_des"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="2dp"
                        android:text="holle world wellcome shenzhen"
                    />
                </LinearLayout>
            </LinearLayout>
        </android.support.v7.widget.CardView>

    </RelativeLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent">

        <Button
            android:id="@+id/stick"
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:background="@drawable/btn_stick"
            android:text="置顶"
            android:textColor="#ffffff"
            android:textSize="16sp"/>

       <!-- <Button
            android:id="@+id/mark"
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:background="@drawable/btn_mark"
            android:text="标记未读"
            android:textColor="#ffffff"
            android:textSize="16sp"/>-->

        <Button
            android:id="@+id/delete"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:background="@drawable/btn_delete"
            android:text="删除"
            android:textColor="#ffffff"
            android:textSize="16sp"/>

    </LinearLayout>

</recyclerview.yunlian.com.myrecyclerview.view.SwipeItemLayout>